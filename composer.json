{
    "name": "innmind/file-watch",
    "type": "library",
    "description": "Library to execute code when a file changes",
    "keywords": ["file", "watch"],
    "homepage": "http://github.com/Innmind/FileWatch",
    "license": "MIT",
    "authors": [
        {
            "name": "Baptiste Langlade",
            "email": "baptiste.langlade@hey.com"
        }
    ],
    "support": {
        "issues": "http://github.com/Innmind/FileWatch/issues"
    },
    "require": {
        "php": "~8.2",
        "innmind/url": "~4.0",
        "innmind/server-control": "~5.0",
        "innmind/time-warp": "~3.0",
        "innmind/time-continuum": "~3.0",
        "psr/log": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Innmind\\FileWatch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Innmind\\FileWatch\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~10.2",
        "vimeo/psalm": "~5.12",
        "innmind/coding-standard": "~2.0",
        "innmind/black-box": "~5.5"
    }
}
